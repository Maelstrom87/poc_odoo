<odoo>
    <template id="homepage_categories" inherit_id="website_slides.homepage_slides">
        <xpath expr="//div[hasclass('o_wslides_home_container')]" position="before">
            <div class="container mt16 mb16">
                <h2>Browse by Categories</h2>
                <div class="row">
                    <t t-foreach="website.get_current_website().lms_category_ids" t-as="category">
                        <div class="col-md-3 mb16">
                            <div class="card category-card h-100">
                                <div class="card-body">
                                    <h5>
                                        <a t-att-href="'/categories/' + slug(category)">
                                            <t t-esc="category.name"/>
                                        </a>
                                    </h5>
                                    <p class="text-muted" t-esc="category.note"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>