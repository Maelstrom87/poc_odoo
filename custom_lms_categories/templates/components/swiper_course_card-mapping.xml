<?xml version="1.0" encoding="utf-8"?>
    <odoo>
            <template id="swiper_course_card" name="Swiper Course Card">
                <t t-set="course_data" t-value="channel.get_course_ui_data()"/>
                
                <div class="course-card with-video" t-att-class="course_data.get('card_hover_class', '')">
                    <div class="course-image-container">
                        <!-- Immagine principale -->
                        <img t-att-src="course_data['image']" class="course-image"/>
                        <div class="course-overlay"/>
                        
                        <!-- Badge principale -->
                        <t t-if="course_data['main_badge']">
                            <div class="course-badge" t-att-style="'background-color: ' + course_data['main_badge']['color']">
                                <t t-esc="course_data['main_badge']['name']"/>
                            </div>
                        </t>
                        
                        <!-- Altri badge -->
                        <t t-foreach="course_data['other_badges']" t-as="badge">
                            <div class="course-badge secondary" t-att-style="'background-color: ' + badge['color']">
                                <t t-esc="badge['name']"/>
                            </div>
                        </t>
                        
                        <div class="mindle-logo">M</div>
                        
                        <!-- Icona play per video teaser -->
                        <t t-if="channel.teaser_video_url">
                            <div class="play-icon" t-att-data-video-url="channel.teaser_video_url" onclick="openVideoModal(this)">
                                <div class="play-icon-triangle"/>
                            </div>
                        </t>
                    </div>
                    
                    <div class="course-info">
                        <!-- Titolo corso -->
                        <h3 class="course-title" t-esc="course_data['name']"/>
                        
                        <!-- Indicatore "Nuovo" -->
                        <t t-if="course_data['is_new']">
                            <span class="new-badge">Nuovo</span>
                        </t>
                        
                        <!-- Tags -->
                        <div class="course-meta">
                            <t t-foreach="course_data['tags']" t-as="tag">
                                <span class="course-tag" t-esc="tag"/>
                            </t>
                        </div>
                        
                        <!-- Statistiche -->
                        <div class="course-stats">
                            <span><t t-esc="course_data['total_slides']"/> lezioni</span>
                            <span>
                                <t t-esc="course_data['total_time_hours']"/>h 
                                <t t-esc="course_data['total_time_minutes']"/>m
                            </span>
                            <span class="rating">
                                <t t-esc="'★' * int(round(course_data['rating']))"/>
                                <span>(<t t-esc="course_data['rating']"/>)</span>
                            </span>
                        </div>
                        
                        <!-- Prezzo -->
                        <div class="course-price" t-esc="course_data['price']"/>
                        
                        <!-- CTA dinamico -->
                        <div class="course-price-action">
                            <a t-att-href="course_data['cta']['url']" 
                            t-att-class="'course-cta ' + course_data['cta']['color']">
                                <t t-esc="course_data['cta']['caption']"/>
                            </a>
                        </div>
                    </div>
                </div>

 
