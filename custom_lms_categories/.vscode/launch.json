{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Odoo 18 Debug",
      "type": "python",
      "request": "launch",
      "program": "B:/IT/Odoo 18.0.20250403/server/odoo-bin",
      "args": [
        "-c",
        "B:/IT/Odoo 18.0.20250403/server/odoo.conf",
        "--dev=all",
        "--without-demo=all",
        "--addons-path",
        "B:/IT/Odoo 18.0.20250403/server/odoo/addons",
        "-d",
        "db",
        "--logfile=B:/IT/Odoo 18.0.20250403/server/logs/odoo.log",
        "--log-level=debug",
        "--http-interface=0.0.0.0",
        "--http-port=8069",
        // "--workers=0"
        "-i",
        "base"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "B:/IT/Odoo 18.0.20250403/server",
        "ODOO_DISABLE_DEV_MODE": "1",
        "ODOO_RELOAD": "1"
      }
    }
  ]
}
